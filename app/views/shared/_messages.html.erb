<div class="row">
  <div class="col-xs-12">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, class: "alert alert-#{name}" do %>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= msg %>
      <% end %> 
    <% end %>
  </div>
</div><!-- end row -->